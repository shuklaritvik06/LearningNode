<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <title>URL Shortner App</title>
</head>
<body>
<div class="container">
<header>
    <div class="d-flex py-3 justify-content-between border-bottom">
        <a href="/" class="text-decoration-none text-dark"><p class="fs-3 fw-bold">URL Shortener</p></a>
        <div>
            <a href="https://twitter.com/shuklaritvik06"><button class="btn btn-primary"><i class="bi bi-twitter"></i>&nbsp;Follow me</button></a>
        </div>
    </div>
</header>
    <div class="container row py-3">
        <div class="col-md-12 bg-light p-5">
            <form action="/" method="post">
            <label for="url" class="form-label">Url</label><div class="form-text mb-2">Click on shorten url in table to copy</div>
                <input type="text" name="url" id="url" class="form-control" placeholder="Enter the url" autocomplete="off">
            <button type="submit" class="btn btn-warning mt-3">Shorten me</button>
                <a href="https://dsc.gg/webxdao"><button type="button" class="btn btn-success mt-3">WAGMI</button></a>
            </form>
        </div>
        <div class="table-responsive">
        <table class="table table-striped mt-5">
            <thead>
            <tr>
                <th scope="col">URL</th>
                <th scope="col">Short URL</th>
                <th scope="col">Generated on</th>
                <th scope="col">Clicks</th>
            </tr>
            </thead>
            <tbody>
            <%for(let i=0;i<short.length;i++){%>
            <tr>
                <td><%=short[i].url%></td>
                <td><a href="<%=short[i].url%>" onclick="window.navigator.clipboard.writeText(document.getElementById('short').innerText)" id="short" target="_blank">https://<%=base.url%>/url/<%=short[i].shortUrl%></a></td>
                <td><%=short[i].date%></td>
                <td><%=short[i].clicks%></td>
            </tr>
            <%}%>
            </tbody>
        </table>
        </div>
    </div>
    <%- include('./partials/footer')%>
</div>
</body>
</html>
