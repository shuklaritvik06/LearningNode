<html lang="en">
<head>
    <%- include('./partials/header')%>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <title>Read Blog | BlogMore</title>
</head>
<body>
<div class="container">
    <header class="py-3 mb-4 border-bottom">
        <div class="d-flex justify-content-between align-items-center text-dark text-decoration-none">
            <a href="/article" class="text-decoration-none"><span class="fs-4 fw-bold text-dark">BlogMore</span></a>
            <div>
                <a href="https://twitter.com/shuklaritvik06"><button class="btn btn-primary"><i class="bi bi-twitter"></i>&nbsp;Follow me</button></a>
            </div>
        </div>
    </header>
    <div class="container row mb-3">
        <div class="col-md-12">
            <div class="h-100 p-5 bg-light rounded-3">
                <h1><%=blog.title%></h1>
                <p><%=blog.date%></p>
                <p><%- blog.body%></p>
                <a href="/article"><button class="btn btn-primary">Go Back</button></a>
            </div>
        </div>
    </div>
    <%- include('./partials/footer')%>
</div>
</body>
</html>