<%-include('./partials/header')%>
  <body>
    <div class="container">
      <header class="d-flex justify-content-between border-bottom py-3">
        <h1>PostBox</h1>
        <button class="btn btn-primary">Check Projects</button>
      </header>
      <form action="/" method="post">
      <div class="input-group my-3">
        <select name="method" id="method" class="form-select flex-grow-0 w-auto">
          <option value="GET">GET</option>
          <option value="POST">POST</option>
          <option value="PUT">PUT</option>
          <option value="PATCH">PATCH</option>
          <option value="DELETE">DELETE</option>
        </select>
        <input type="text" class="form-control" placeholder="URL" id="url">
        <button class="btn btn-primary" type="button" id="sendBtn">Send</button>
      </div>
      <div id="paramArea" class="border p-3 my-3">
        <button class="btn btn-primary" id="paramBtn" type="button">Add Param</button>
      </div>
      <div id="headerArea" class="border p-3 my-3">
        <button class="btn btn-primary" id="headerBtn" type="button">Add Header</button>
      </div>
      <div id="bodyArea" class="border p-3 d-none my-3"></div>
    </form>
    <div class="bg-light p-3 d-none" id="responseArea">
      <h3>Response</h3>
      <p>Status: <span id="statusCode" class="me-3"></span></p>
      <div class="overflow-scroll" style="height: 300px;"><pre><code id="response"></code></pre></div>
    </div>
   </div>
    <template id="paramTemplate">
      <div class="input-group my-3" data-param-key-value-pair>
        <input type="text" class="form-control" placeholder="Key" name="key">
        <input type="text" class="form-control" placeholder="Value" name="value">
        <button class="btn btn-danger remove" type="button">X</button>
      </div>  
    </template>
    <template id="headerTemplate">
      <div class="input-group my-3" data-header-key-value-pair>
        <input type="text" class="form-control" placeholder="Key" name="key">
        <input type="text" class="form-control" placeholder="Value" name="value">
        <button class="btn btn-danger remove" type="button">X</button>
      </div>  
    </template>
    <script src="js/index.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
  </body>
</html>
